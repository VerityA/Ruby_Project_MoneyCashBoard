<table class = "all">
  <thead>
    <tr>
      <th>Transaction Type</th>
      <th>Merchant</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Edit</th>
      <th>
        <form class="" action="/my-money/delete-all" method="post">
          <input type="submit" value="Delete All">
        </form>
      </th>
      </tr>
    </thead>

    <tfoot class = "all foot">
      <tr>
        <td>Total Spend</td>
        <td></td>
        <td><%= @total%> </td>
      </tr>
    </tfoot>

    <tbody>


      <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.tag()%></td>
        <td><%= transaction.merchant().capitalize%></td>
        <td>Â£<%= transaction.amount%></td>
        <td><%= transaction.trans_date%></td>
        <td>
          <a href="/my-money/transaction/<%=transaction.id%>/edit"> Edit </a>
        </td>
        <td>
          <form action="/my-money/all/<%=transaction.id%>/delete" method="post">
            <input type="text" hidden name="tag_id" value="<%= transaction.tag_id %>" />
            <input type="submit" value="Delete">
          </form>
        </td>

      </tr>
      <%end%>

    </tbody>


  </table>
