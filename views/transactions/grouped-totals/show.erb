  <tr>
    <td><%=tag.tag_name()%></td>
    <td>£<%= '%.2f' % tag.total()%></td>
    <td> <a class="edit" href="/my-money/<%=tag.id%>"> <i class="fas fa-shopping-cart"></i></a></td>
  </tr>
  <%end%>

</table>

