<%= erb(:new)%>

<div class="totals-home">

 <%if @cweek_total < @budget.weekly%>
 <div class= "total green">
   <%else%>
  <div class= "total red">
<%end%>
<p class= "total-text">My week spend</p> <p class="total">£<%= @cweek_total.to_i.to_i.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse%></p>
<p class= "budget-text">My budget</p> <p class="budget">£<%= @budget.weekly.to_i.to_i.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse%> </p>
<a class="button" href="/my-money/cweek/show"><i class="fas fa-shopping-cart"></i> &nbsp;View Transactions</a>
</div>

